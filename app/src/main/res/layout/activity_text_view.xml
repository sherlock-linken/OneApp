<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.witbit.sherlock.textview.TextViewActivity">

	<TextView
		android:id="@+id/tv_test"
		android:layout_width="0dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:ellipsize="end"
		android:maxLines="6"
		android:textSize="15dp"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/btn_tv_test_1"
		android:layout_width="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_test"
		android:text="go1"
		android:layout_height="wrap_content"/>

	<Button
		android:id="@+id/btn_tv_test_2"
		android:layout_width="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btn_tv_test_1"
		android:text="go2"
		android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>
